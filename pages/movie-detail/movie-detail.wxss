
.container{
    display: flex;
    flex-direction: column;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}
.head-img{
    width: 100%;
    height: 320rpx;
    filter: blur(20rpx);
}
.head-info{
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 320rpx;
    display: flex;
    flex-direction: column;
}
.image{
    position: absolute;
    top: 160rpx;
    right: 30rpx;
    width: 175rpx;
    height: 238rpx;
}
.title{
    font-size: 19px;
    color:#fff;
    font-weight:bold;
    margin-top: 50rpx;
    margin-left: 40rpx;
    letter-spacing: 2px;
}
.areaTime{
    font-size: 14px;
    color: #fff;
    margin-top: 30rpx;
    margin-left: 40rpx;
}
.info{
    display: flex;
    flex-direction: row;
    margin-left: 50rpx;
    margin-top: 30rpx;
}
.info .red{
    color: #f21146;
    font-size:22rpx;
    margin-right: 10rpx;
}
.info .text{
    color: #666;
    font-size:22rpx;
    margin-right: 30rpx;
}
.summary{
    width: 100%;
    margin-top: 40rpx;
    margin-left: 40rpx;
    color: #777777;
}
.original-title{
    color: #1f3463;
    font-size: 24rpx;
    font-weight: bold;
    margin-bottom: 40rpx;
}
.headline{
    display: flex;
    flex-direction: row;
    font-size: 10px;
}
.headline .mark{
    font-size: 12px;
    color: #1f3463;
    margin-right: 20rpx;
}
.headline .star{
    position: relative;
    width: auto;
    color: #ccc;
    font-size: 10px;
    margin-right: 20rpx;
}
.headline .star .star-show{
    position: absolute;
    left: 0rpx;
    top: 0rpx;
    color: red;
    overflow: hidden;
}
.hr{
    margin-top: 40rpx;
    height:1px;
    width: 100%;
    background-color: #d9d9d9;
}
.synopsis{
    display: flex;
    flex-direction: column;
    margin-top: 50rpx;
    margin-left: 40rpx;
    color: #999;
    font-size: 16px;
}
.synopsis-content{
    font-size: 12px;
    margin-top: 30rpx;
}
.cast{
    display: flex;
    flex-direction: column;
    width: 100%;
    margin-left: 40rpx;
    margin-top: 50rpx;
    white-space: nowrap;
    overflow: hidden;
}
.cast-title{
    color: #999;
    margin-bottom: 40rpx;
}
.cast-container{
    display:inline-flex;
    flex-direction: column;
    margin-bottom: 50rpx;
    margin-right: 40rpx;
    width: 170rpx;
    text-align:center;
    white-space: normal;
}
.cast-img{
    width: 170rpx;
    height: 210rpx;
}
.cast-name{
    margin: 10rpx 0;
    color: #999;
    font-size: 12px;
}
